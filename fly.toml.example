# Fly.io configuration example
# Copy this to fly.toml and customize for your deployment

app = "my-mvg-departures"
primary_region = "fra"  # Frankfurt, change to your preferred region

[build]
  dockerfile = "docker/Dockerfile.optimized"

[env]
  HOST = "0.0.0.0"
  PORT = "8000"
  REFRESH_INTERVAL_SECONDS = "30"
  TIME_FORMAT = "minutes"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[vm]]
  memory_mb = 256  # Minimal RAM - can increase if needed
  cpu_kind = "shared"
  cpus = 1

[checks]
  [checks.health]
    grace_period = "10s"
    interval = "30s"
    method = "GET"
    timeout = "5s"
    path = "/"


